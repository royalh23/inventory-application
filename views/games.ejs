<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/base.css" />
    <link rel="stylesheet" href="/navbar.css" />
    <link rel="stylesheet" href="/games.css" />
    <link rel="stylesheet" href="/footer.css" />
  </head>
  <body>
    <div class="base-container">
      <%- include('partials/navbar') %>
      <main class="games-main">
        <h1 class="games-title"><%= title %></h1>
        <% if (games.length !== 0) { %>
          <ul class="games-list">
            <% games.forEach(game => { %>
              <li><a href="/games/<%= game.id %>" class="game-link"><%= game.name %></a></li>
            <% }); %>
          </ul>
        <% } %>
        <% if (games.length === 0 && title.length > 5) { %>
          <p class="games-para">No games found in this genre :/</p>
          <p class="add-games">Try <a href="/games/add">adding</a> some!</p>
        <% } %>
        <% if (title.length > 5) { %>
          <div class="update-delete">
            <a href="/genres/<%= id %>/update" class="update">Update</a>
            <a href="/genres/<%= id %>/delete" class="delete">Delete</a>
          </div>
        <% } %>
        <% if (games.length === 0 && title.length === 5) { %>
          <p class="add-games">Try <a href="/games/add">adding</a> some games!</p>
        <% } %>
      </main>
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
